        <Button x:Name="start" Content="Begin" HorizontalAlignment="Left" FontSize="35" Margin="280,99,0,0" VerticalAlignment="Top" Width="208" Height="92" Panel.ZIndex="17" Click="Button_Click" Foreground="#FF200F68" Grid.Row="1">
            <Button.Background>
